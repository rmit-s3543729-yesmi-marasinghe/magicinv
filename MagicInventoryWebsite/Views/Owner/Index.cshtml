@model IEnumerable<MagicInventoryWebsite.Models.OwnerInventory>

@{
    ViewData["Title"] = "Index";
}
<section>
<h2>Index</h2>

<p>
    <a asp-action="StockRequests">Show Stock Requests</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockLevel)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Product.ProductID)
            </td>
            <td>
                @Html.DisplayFor(model => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.StockLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a>
               
              
            </td>
        </tr>
}
    </tbody>
</table>
</section>